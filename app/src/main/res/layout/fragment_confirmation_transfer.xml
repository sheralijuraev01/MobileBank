<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".ui.main.transfer.ConfirmationTransferFragment">

    <ImageView
        android:id="@+id/backBtnConfirmation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backBtnConfirmation"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Tasdiqlash"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confirmationEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textConfirmation"
        android:layout_margin="16dp"
        android:text="sher.jorayev01@gmail.com elektron pochtaga kelgan kodni kiriting"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/enterCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmationEmailText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Kodni kiritish"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/enterCodeEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/enterCodeText"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        style="@style/EditTextStyle"
        android:text="Kodni kiritish"
        android:inputType="number"
        android:paddingHorizontal="16dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterCodeEdit"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qayta yuborish"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:50"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"/>


    </LinearLayout>


    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/secondary_color"
        android:text="Tasdiqlang"
        android:textColor="@color/white"
        android:textSize="16sp" />


</RelativeLayout>